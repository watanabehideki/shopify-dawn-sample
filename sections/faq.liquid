<section class="page-width">
  {{ section.settings.title }}
  <dl>
    {% for block in section.blocks %}
      <dt>{{ block.settings.title }}</dt>
      <dd>{{ block.settings.answer }}</dd>
    {% endfor %}
  </dl>
</section>

{% schema %}
  {
    "name": "FAQ",
    "settings": [
      {
        "type": "text", // テーマエディタ上の入力タイプ
        "id": "title", // 該当セクション設定のID(任意)
        "default": "FAQ",
        "label": "FAQのタイトル"
      }
    ],
    "blocks": [
      {
        "type": "faq_item",
        "name": "FAQ項目",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "質問を入力してください"
          },
          {
            "type": "text",
            "id": "answer",
            "label": "回答を入力してください"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "FAQ"
      }
    ]
  }
{% endschema %}